#!/bin/bash

if [ $# -lt 2 ]; then
	echo "Usage: `basename $0` [grep_options] pattern path" 1>&2
	exit 1
fi

cmd="egrep --color=auto -R --include='*.[CcHhlyd]' --exclude '*.o.d' --include='*.cc' --include='*.hh' --include='*.apl' --include='*.rpc' --include='Makefile*' --include='config' --include='build' --include='*.sh' --include='*.awk' --include='*.py' --include='*.pl' --include='*.cfg' --include='*.init?' --include='*.proto'"
i=1
for arg; do
	cmd="$cmd \"$arg\""
#	if [ $i != $# ]; then
#		cmd="$cmd \"$arg\""
#	else
#		path="$arg"
#	fi
	i=$(($i+1))
done
echo $cmd 1>&2
eval $cmd
